{
  "$schema": "../../../../node_modules/@angular-devkit/schematics/collection-schema.json",
  "schematics": {
    "ng-add": {
      "description": "Add my library to the project.",
      "factory": "./ng-add/index#ngAdd"
    },
    "block": {
      "description": "Generate a  block component with template.",
      "factory": "./block/index#blockComponent",
      "schema": "./block/schema.json"
    },
    "admin-view": {
      "description": "Generate an admin-view parent.",
      "factory": "./admin-view/index#adminViewComponent",
      "schema": "./admin-view/schema.json"
    },
    "tab": {
      "description": "Generate a tab for the first tab-view parent.",
      "factory": "./tab/index#appendTab",
      "schema": "./tab/schema.json"  
    },
    "table": {
      "description": "Generate a table component",
      "factory": "./table/index#tableComponent",
      "schema": "./table/schema.json"  
    },
    "table-item": {
      "description": "Generate a table item component",
      "factory": "./table-item/index#appendTableItem",
      "schema": "./table-item/schema.json"  
    }
  }
}