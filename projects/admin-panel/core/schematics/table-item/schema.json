{
  "$schema": "http://json-schema.org/schema",
  "id": "SchematicsTab",
  "title": "My Tab Schema",
  "type": "object",
  "properties": {
    "name": {
      "description": "The name of the component.",
      "type": "string"
    },
    "path": {
      "type": "string",
      "format": "path",
      "description": "The path to create the service.",
      "visible": false
    },
    "project": {
      "type": "string",
      "description": "The name of the project.",
      "$default": {
        "$source": "projectName"
      }
    },
    "adminView": {
      "type": "string",
      "description": "Name of parent tab view."
    },
    "position": {
      "type": "string",
      "description": "Position around the table (up or down)"
    },
    "itemType": {
      "type": "string",
      "description": "Component to load"
    },
    "tableView": {
      "type": "string",
      "description": "Table to inject item to"
    },
    "placeholder": {
      "type": "string",
      "description": "Component placeholder"
    }
   },
  "required": [
    "name",
    "adminView",
    "position",
    "itemType",
    "tableView",
    "placeholder"
  ]
}